@model IEnumerable<DentalClinic.Models.PatientHistory>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="font-weight-light">Patient History List</h1>
<br />
<p>
    <a asp-action="AddOrEdit" asp-controller="PatientHistories"
       class="btn btn-outline-success btn-sm">
        <i class="fas fa-plus">
        </i> Add new
    </a>
</p>
<table class="table table-hover">
    <thead class="table table-sm table-warning">
        <tr>
            <th hidden>ID</th>
            <th>HISTORY ELEMENT</th>
            <th>PATIENT REGISTERATION</th>
            <th>OPTIONS</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
        <tr class="table table-sm">
            <td hidden>
                @Html.DisplayFor(modelItem => item.PatientHistoryId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HistoryElement.HistoryElementId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PatientRegisteration.PatientRegisterationId)
            </td>
            <td>
                <span class="pr-1"><a asp-action="AddOrEdit" asp-route-id="@item.PatientHistoryId"><i class="fas fa-edit"></i> Edit </a></span>
                <span class="pl-1"><a asp-action="Delete" asp-route-id="@item.PatientHistoryId" class="text-danger ml-1" onclick="return confirm('Are you sure to delete this record?')"><i class="fas fa-trash"></i> Delete </a></span>
            </td>
        </tr>
}
    </tbody>
</table>
