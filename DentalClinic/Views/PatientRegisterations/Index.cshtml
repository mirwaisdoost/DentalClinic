@model IEnumerable<DentalClinic.ViewModels.PatientRegistrationViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <div class="card">
        <div class="card-header">
            <div class="row">
                <h4 class="font-weight-light text-center m-0 col col-11">Patient Registertion List</h4>
                <a asp-action="AddOrEdit" asp-controller="PatientRegisterations" class="m-0 btn btn-outline-secondary    btn-sm float-right col col-1">
                    <i class="fas fa-plus">
                    </i> Add new
                </a>
            </div>
        </div>
        <div class="card-body p-0">
            <table class="table table-hover border mt-0">
                <thead class="table-sm table-bordered">
                    <tr>
                        <th>ID</th>
                        <th>PATIENT</th>
                        <th>DOCTOR</th>
                        <th>REGISTERATION FEE</th>
                        <th>OPTIONS</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="table-sm  table-bordered">
                            <td>@item.patientRegistrationID</td>
                            <td>@item.patientName</td>
                            <td>@item.doctorName</td>
                            <td>@item.registrationFee</td>
                            <td>
                                <span class="pr-1"><a asp-action="AddorEdit1" asp-route-id="@item.patientRegistrationID"><i class="fas fa-edit"></i></a></span>
                                <span class="pl-1"><a asp-action="Delete" asp-route-id="@item.patientRegistrationID" class="text-danger ml-1" onclick="return confirm('Are you sure to delete this record?')"><i class="fas fa-trash"></i></a></span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="card-footer"> Total:</div>
    </div>