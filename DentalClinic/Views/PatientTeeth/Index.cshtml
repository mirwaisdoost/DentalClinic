@model IEnumerable<DentalClinic.Models.PatientTeeth>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="font-weight-light">Patient Teeth</h1>
<br />
<p>
    
</p>
<div class="card">
    <div class="card-header">
        <a asp-action="AddOrEdit" asp-controller="PatientTeeth"
           class="btn btn-outline-secondary btn-sm float-right">
            <i class="fas fa-plus">
            </i> Add new
        </a>
    </div>
    <div class="card-body">
        <table class="table table-hover">
            <thead class="table-sm table-warning">
                <tr>
                    <th>ID</th>
                    <th>PATIENT REGISTERATION</th>
                    <th>TEETH NUMBER</th>
                    <th>OPTIONS</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="table-sm">
                        <td>
                            @Html.DisplayFor(modelItem => item.PatientTeethId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PatientRegisteration.PatientRegisterationId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TeethNumber.TeethNumberId)
                        </td>
                        <td>
                            <span class="pr-1"><a asp-action="AddOrEdit" asp-route-id="@item.PatientTeethId"><i class="fas fa-edit"></i> Edit </a></span>
                            <span class="pl-1"><a asp-action="Delete" asp-route-id="@item.PatientTeethId" class="text-danger ml-1" onclick="return confirm('Are you sure to delete this record?')"><i class="fas fa-trash"></i> Delete </a></span>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
