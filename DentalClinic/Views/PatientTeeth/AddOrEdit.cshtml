@model DentalClinic.Models.PatientTeeth

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="font-weight-light">Add/Edit</h1>

<h4 class="font-weight-light">PatientTeeth</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddOrEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PatientTeethId" />
            <div class="form-group">
                <label asp-for="PatientRegisterationId" class="control-label"></label>
                <select asp-for="PatientRegisterationId" class="form-control" asp-items="ViewBag.PatientRegisterationId"></select>
                <span asp-validation-for="PatientRegisterationId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TeethNumberId" class="control-label"></label>
                <select asp-for="TeethNumberId" class="form-control" asp-items="ViewBag.TeethNumberId"></select>
                <span asp-validation-for="TeethNumberId" class="text-danger"></span>
            </div>
            <div class="form-row">
                <div class="form-group col col-md-6">
                    <input type="submit" value="Save" class="btn btn-info btn-block" />
                </div>
                <div class="form-group col col-md-6">
                    <a asp-action="Index" class="btn btn-secondary btn-block"><i class="fas fa-table"></i> Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>



